<div class="container">
  <h4>From Apoteker</h4>
  <hr>

  <form action="<%= targetRoute %> " method="post">
    Nama Apoteker
    <input type="text" name="nama_apoteker" value="<%= nama_apoteker %>" id="nama_apoteker" class="form-control mb-2"
      required>

    Username
    <input type="text" name="username" value="<%= username %>" id="username" class="form-control mb-2" required>

    Password
    <input type="password" name="password" value="<%= deskripsi(password) %>" id="password" class="form-control mb-2"
      required>

    <input type="checkbox" onclick="hidePW()"> Show Password <br> <br>

    <button type="submit" class="btn btn-success">
      Simpan
    </button>
  </form>
</div>

<script>
  function hidePW() {
    var x = document.getElementById("password");
    if (x.type === "password") {
      x.type = "text";
    } else {
      x.type = "password";
    }
  }
</script>